{
  "containers": [
    {
      "name": "sdp-service",
      "image": "ghcr.io/appgate/sdp-k8s-client/sdp-headless-service:5.5.1",
      "imagePullPolicy": "Always",
      "securityContext": {
        "runAsGroup": 102,
        "runAsUser": 103,
        "runAsNonRoot": true
      },
      "resources": {},
      "terminationMessagePath": "/dev/termination-log",
      "terminationMessagePolicy": "File",
      "volumeMounts": [
        {
          "mountPath": "/var/run/sdp-driver",
          "name": "run-sdp-driver"
        },
        {
          "mountPath": "/etc/pod-info",
          "name": "pod-info"
        }
      ]
    },
    {
      "name": "sdp-driver",
      "image": "ghcr.io/appgate/sdp-k8s-client/sdp-headless-driver:5.5.1",
      "imagePullPolicy": "Always",
      "securityContext": {
        "runAsGroup": 101,
        "runAsUser": 103,
        "runAsNonRoot": true,
        "fsGroup": 101,
        "capabilities": {
          "add": [
            "NET_ADMIN",
            "NET_BIND_SERVICE"
          ]
        }
      },
      "volumeMounts": [
        {
          "mountPath": "/var/run/sdp-driver",
          "name": "run-sdp-driver"
        },
        {
          "mountPath": "/var/run/sdp-dnsmasq",
          "name": "run-sdp-dnsmasq"
        },
        {
          "mountPath": "/dev/net/tun",
          "name": "tun-device"
        }
      ]
    },
    {
      "name": "sdp-dnsmasq",
      "image": "ghcr.io/appgate/sdp-k8s-client/sdp-dnsmasq:5.5.1",
      "imagePullPolicy": "Always",
      "securityContext": {
        "runAsGroup": 101,
        "runAsUser": 100,
        "runAsNonRoot": true,
        "capabilities": {
          "add": [
             "NET_BIND_SERVICE"
           ]
        }
      },
      "volumeMounts": [
        {
          "mountPath": "/var/run/sdp-dnsmasq",
          "name": "run-sdp-dnsmasq"
        }
      ],
      "command": [
        "/sdp-dnsmasq/sdp-dnsmasq"
      ]
    }
  ],
  "dnsConfig": {
    "searches": "svc.cluster.local cluster.local"
  },
  "volumes": [
    {
      "mountPath": "/var/run/sdp-driver",
      "name": "run-sdp-driver"
    },
    {
      "mountPath": "/var/run/sdp-dnsmasq",
      "name": "run-sdp-dnsmasq"
    },
    {
      "hostPath": {
        "path": "/dev/net/tun"
      },
      "name": "tun-device"
    },
    {
      "name": "pod-info",
      "downwardAPI": {
        "items": [
          {
            "path": "labels",
            "fieldRef": {
              "fieldPath": "metadata.labels"
            }
          },
          {
            "path": "annotations",
            "fieldRef": {
              "fieldPath": "metadata.annotations"
            }
          }
        ]
      }
    }
  ]
}
