#!/usr/bin/env sh

WATCHER_SOCKET=/var/run/sdp-driver-watcher.sock

/opt/appgate/appgate-driver \
  -d \
  -p /var/run/sdp-driver/.driver.sock \
  --container -l /var/log/appgate/driver.log \
  --varrun /var/run/sdp-driver&

exec socat UNIX-LISTEN:$WATCHER_SOCKET,fork system:/opt/appgate/sdp-driver-watcher,fdout=4
